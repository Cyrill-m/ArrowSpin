<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivCaliber"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#F5F5F5"
        android:contentDescription="@string/img_caliber_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_caliber_ex" />

    <ImageView
        android:id="@+id/ivArrow2"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:contentDescription="@string/img_arrow_description"
        android:onClick="spinArrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_arrow_r" />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:contentDescription="@string/img_arrow_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_arrow"
        android:onClick="spinArrow"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingTop="4dp"
            android:paddingEnd="4dp">

            <ImageButton
                android:id="@+id/ibRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_rb"
                android:onClick="btnColorClick"
                app:srcCompat="@drawable/img_btn1_rb" />

            <ImageButton
                android:id="@+id/ibBR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_br"
                android:onClick="btnColorClick"
                app:srcCompat="@drawable/img_btn1_br" />

            <ImageButton
                android:id="@+id/ibRR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_rr"
                android:onClick="btnColorClick"
                app:srcCompat="@drawable/img_btn1_rr" />

            <ImageButton
                android:id="@+id/ibBB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_bb"
                android:elevation="6dp"
                android:onClick="btnColorClick"
                android:stateListAnimator="@null"
                android:translationZ="4dp"
                app:srcCompat="@drawable/img_btn1_bb" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:contentDescription="@string/img_coins"
                app:srcCompat="@drawable/img_bet" />

            <TextView
                android:id="@+id/tvCoins"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-smallcaps"
                android:text="1000"
                android:textColor="@color/colorText"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvCoinsCH"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-smallcaps"
                android:text="+300"
                android:textColor="@color/colorTextG"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <ImageButton
                android:id="@+id/ibOE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_oe"
                android:onClick="btnOEClick"
                app:srcCompat="@drawable/img_btn2_oe" />

            <ImageButton
                android:id="@+id/ibEO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_eo"
                android:onClick="btnOEClick"
                app:srcCompat="@drawable/img_btn2_eo" />

            <ImageButton
                android:id="@+id/ibOO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_oo"
                android:onClick="btnOEClick"
                app:srcCompat="@drawable/img_btn2_oo" />

            <ImageButton
                android:id="@+id/ibEE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_ee"
                android:onClick="btnOEClick"
                app:srcCompat="@drawable/img_btn2_ee" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/ibBet05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_bet05"
                android:onClick="btnBetClick"
                app:srcCompat="@drawable/img_bet05" />

            <ImageButton
                android:id="@+id/ibBet10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_bet10"
                android:onClick="btnBetClick"
                app:srcCompat="@drawable/img_bet10" />

            <ImageButton
                android:id="@+id/ibBet20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_bet20"
                android:onClick="btnBetClick"
                app:srcCompat="@drawable/img_bet20" />

            <ImageButton
                android:id="@+id/ibBet50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_bet50"
                android:onClick="btnBetClick"
                app:srcCompat="@drawable/img_bet50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp">

            <ImageButton
                android:id="@+id/ibSum1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_sum1"
                android:onClick="btnSumClick"
                app:srcCompat="@drawable/img_sum1" />
            <ImageButton
                android:id="@+id/ibSum2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_sum2"
                android:onClick="btnSumClick"
                app:srcCompat="@drawable/img_sum2" />
            <ImageButton
                android:id="@+id/ibSum3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_sum3"
                android:onClick="btnSumClick"
                app:srcCompat="@drawable/img_sum3" />
            <ImageButton
                android:id="@+id/ibSum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="0"
                android:background="#00000000"
                android:contentDescription="@string/ib_sum4"
                android:onClick="btnSumClick"
                app:srcCompat="@drawable/img_sum4" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivArrowRedSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/img_arrow_red"
                app:srcCompat="@drawable/img_arrow_red_small" />

            <TextView
                android:id="@+id/tvArrowRNum"
                android:layout_width="64dp"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="2dp"
                android:text="36"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivArrowBlackSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/img_arrow_black"
                app:srcCompat="@drawable/img_arrow_black_small" />

            <TextView
                android:id="@+id/tvArrowBNum"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="2dp"
                android:text="36"
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/ivSumSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:contentDescription="@string/img_sum_small"
                app:srcCompat="@drawable/img_sum_small" />

            <TextView
                android:id="@+id/tvSum"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-smallcaps"
                android:paddingTop="2dp"
                android:text=""
                android:textColor="@color/colorText"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingTop="2dp"
            android:paddingEnd="4dp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/tvAbout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:text="@string/tv_about" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>